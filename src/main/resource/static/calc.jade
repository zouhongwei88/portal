doctype html
html
	head
		block head
			meta(name="viewport", content="width=device-width, initial-scale=1, user-scalable=no")
			meta(name="apple-mobile-web-app-capable", content="yes")
			meta(name="apple-mobile-web-app-status-bar-style", content="black")
			meta(charset="UTF-8")
			base(href='/')
			link(rel="stylesheet", type="text/css", href="portal-dark/calc.css")
			link(rel="stylesheet", type="text/css", href="resources/cola-ui/semantic.css")
	body
		#container
			#calc.calc
				#top
					#win-tool
						a#history(href="javascript:void(0);" title="历史记录")
							i#h.iconfont.history
					#result
						#express
						#res 0
				#bottom
					.row
						span#reset(data-number="C") 清空
						span#remove(data-number="←") 退格
						span(data-number="%") %
						span.tool.chu(data-number="/") ÷
					.row
						span(data-number="7") 7
						span(data-number="8") 8
						span(data-number="9") 9
						span.tool.cheng(data-number="*") ×
					.row
						span(data-number="4") 4
						span(data-number="5") 5
						span(data-number="6") 6
						span.tool.jiang(data-number="-") -
					.row
						span(data-number="1") 1
						span(data-number="2") 2
						span(data-number="3") 3
						span.tool.add(data-number="+") ＋
					.row
						span.zero(data-number="0") 0
						span.dian(data-number=".") .
						span#equals.tool.eq(data-number="=") =
				#historyBox
					.con
						ul
					.remove
						a(href="javascript:;" title="清空历史记录")
							i.iconfont.del
	block scripts
		script(src="resources/jquery/jquery-2.1.3.js")
		script(src="portal-dark/calc.js")
